@model HodorTutor.Models.ViewModels.Tutors.TutorView
@{
    ViewBag.Title = "ประวัติส่วนตัว";
}

<h1 class="header" style="margin-top:0px; padding-left:0px">Profile</h1>
<div> 
    @using(Html.BeginForm()){
    <table class="table">
        @Html.ValidationSummary(true)
		<tr>
            <td style="width:20%">
			@Html.LabelFor(e => e.FirstName)
            </td>
            <td>
			@Html.TextBoxFor(e => e.FirstName, new { @class="form-control", @style = "width:70%;", maxlength = 50 })<br />
			@Html.ValidationMessageFor(e => e.FirstName)     
            </td>
        </tr>
        <tr>
            <td>
			@Html.LabelFor(e => e.LastName)
            </td>
            <td>
			@Html.TextBoxFor(e => e.LastName, new { @class="form-control", @style = "width:70%;", maxlength = 50 })<br />
			@Html.ValidationMessageFor(e => e.LastName)      
		    </td> 
		</tr>
        <tr>
            <td>
			@Html.LabelFor(e => e.Address)
            </td>
            <td>
			@Html.TextAreaFor(e => e.Address, new { @class="form-control", @style = "width:70%; height:80px" })<br />
			@Html.ValidationMessageFor(e => e.Address)   
            </td>      
		</tr>
        <tr>
            <td>
            @Html.LabelFor(e => e.SelectedCity)
            </td>
            <td>
            @Html.DropDownListFor(e => e.SelectedCity, Model.CityList, Model.SelectedCity)
            </td>            
        </tr> 
		<tr>
            <td>
			@Html.LabelFor(e => e.TelephoneNumber)
             </td>
            <td>
			@Html.TextBoxFor(e => e.TelephoneNumber, new { @class="form-control", @style = "width:70%;", maxlength = 20 })<br />
			@Html.ValidationMessageFor(e => e.TelephoneNumber)
            </td>
		</tr>
        <tr><td><input type="submit" value="แก้ไข" class="btn btn-primary" /></td><td></td></tr>
    </table>
	}
</div>