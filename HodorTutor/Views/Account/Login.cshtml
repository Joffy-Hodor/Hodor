@model HodorTutor.Models.LoginModel

@{
    ViewBag.Title = "Log in";
}

<div class="container">
<section id="loginForm">
<h1 class="page-header" style="margin-top:0px; padding-left:12px">@ViewBag.Title.</h1>
@using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl })) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <form class="form-signin" role="form">
        <div class="col-lg-4">           
            <div class="form-group">
                @Html.LabelFor(m => m.UserName)
                    @Html.TextBoxFor(m => m.UserName, new { @type="text", @class="form-control", @placeholder="Enter Name" })
                    @Html.ValidationMessageFor(m => m.UserName)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password)
                    @Html.TextBoxFor(m => m.Password, new { @class="form-control", @placeholder="Enter password", @type="password" })
                    
                    @Html.ValidationMessageFor(m => m.Password)
            </div>
            <div class="form-group">                  
                    @Html.CheckBoxFor(m => m.RememberMe)
                    @Html.LabelFor(m => m.RememberMe)
            </div>
            <div class="form-group">
            <button type="submit" name="submit" id="submit" class="btn btn-lg btn-primary btn-block"><span class="glyphicon glyphicon-log-in"></span> Sign in</button>
            </div>
            <div class="form-group">
            @Html.ActionLink("Register", "Register") if you don't have an account.
            </div>
        </div>
    </form>
    
}
</section>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
